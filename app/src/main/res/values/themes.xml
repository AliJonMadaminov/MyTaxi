<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidTaskJunior" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_my</item>
        <item name="colorPrimaryVariant">@color/black_my</item>
        <item name="colorOnPrimary">@color/black_my</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>
        <!-- Customize your theme here. -->

        <!--Transparent status bar-->
        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:listDivider">@color/white_my</item>

    </style>


    <style name="ClickableStyle">
        <item name="background">?attr/selectableItemBackground</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="BottomSheetItemTextStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="font">@font/lato_bold</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <style name="MenuItemTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="font">@font/lato_bold</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textColor">@color/white_my</item>
    </style>

    <style name="AppBarTitleStyle">
        <item name="android:textColor">@color/black_my</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/lato_bold</item>
    </style>

    <style name="CarNumberTextStyle">
        <item name="android:textColor">@color/black_my</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="CarNameTextStyle">
        <item name="android:textColor">@color/very_light_gray</item>
        <item name="android:textAppearance">?textAppearanceBody2</item>
    </style>

    <style name="SmallInfoTextStyle">
        <item name="android:textColor">@color/very_light_gray</item>
        <item name="android:textAppearance">?textAppearanceBody2</item>
    </style>

    <style name="SmallInfoTextStyle.Bold">
        <item name="android:textColor">@color/black_my</item>
        <item name="android:textAppearance">?textAppearanceBody2</item>
    </style>

    <style name="BottomSheetTitleStyle">
        <item name="android:fontFamily">@font/lato_black</item>
        <item name="android:textColor">@color/black_my</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>